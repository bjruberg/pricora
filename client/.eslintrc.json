{
  "env": {
    "browser": true,
    "jest": true,
    "node": false
  },
  "parserOptions": {
    "project": "./client/tsconfig.json"
  },
  "rules": {
    "radix": 0,
    "no-restricted-syntax": 0,
    "no-await-in-loop": 0,
    "no-console": 0,
    "consistent-return": 0,
    "no-param-reassign": [2, { "props": false }],
    "no-return-assign": [2, "except-parens"],
    "no-use-before-define": 0,
    "import/prefer-default-export": 0,
    "import/no-cycle": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  },

  "plugins": [
    "@typescript-eslint"
  ]
}
