{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "*": ["./*"]
    },
    "types": [],
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true, // preact documentation for integration react libs in preact using ts
    "typeRoots": ["./src/@types", "../node_modules/@types"],
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "../config/*.ts", "src/i18n/*", "assets/*"],
  "exclude": [
    "dist"
  ]
} 